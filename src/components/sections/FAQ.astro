---
import { Icon } from "astro-icon/components";
import Container from "@components/ui/Container.astro";
import Button from "@components/ui/Button.astro";

const FAQS = [
    {
        question: "Do you offer emergency HVAC services?",
        answer: "Yes, we offer 24/7 emergency HVAC services. Our team is ready to handle urgent repairs to ensure your comfort and safety around the clock.",
    },
    {
        question: "How often should I have my HVAC system serviced?",
        answer: "We recommend having your HVAC system serviced at least twice a year—once before summer and once before winter—to ensure optimal performance and efficiency.",
    },
    {
        question: "Do you handle both residential and commercial projects?",
        answer: "Absolutely. We have extensive experience in both residential homes and large-scale commercial HVAC and electrical installations.",
    },
    {
        question: "What areas do you serve?",
        answer: "We operate throughout the greater metropolitan area and surrounding suburbs. Contact us to verify if we cover your specific location.",
    },
    {
        question: "Are your technicians licensed and insured?",
        answer: "Yes, all our technicians are fully licensed, bonded, and insured, ensuring professional and safe service for every project.",
    },
];
---

<section class="py-24 bg-white border-t border-white/5">
    <Container>
        <div class="grid lg:grid-cols-12 gap-12 lg:gap-24">
            <!-- Left Column: Heading & CTA -->
            <div class="lg:col-span-5 flex flex-col justify-start space-y-8">
                <div>
                    <h2 class="text-black mb-6">Frequently Asked Questions</h2>
                    <p class="text-gray-600 text-lg leading-relaxed">
                        Find answers to common questions about our services,
                        maintenance, and expert solutions. Can't find what
                        you're looking for? Reach out to us directly.
                    </p>
                </div>

                <div class="pt-4">
                    <Button href="/contact" variant="primary">
                        Contact Support
                    </Button>
                </div>
            </div>

            <!-- Right Column: Accordion -->
            <div class="lg:col-span-7">
                <div class="flex flex-col">
                    {
                        FAQS.map((faq) => (
                            <details class="group border-b border-white/10 last:border-b-0">
                                <summary class="flex items-center justify-between gap-4 py-6 cursor-pointer list-none text-lg md:text-xl font-medium text-black group-hover:text-blue-400 transition-colors">
                                    <span>{faq.question}</span>
                                    <span class="relative flex-shrink-0 size-6 flex items-center justify-center text-white/50 group-hover:text-blue-400 transition-colors">
                                        <Icon
                                            name="plus"
                                            class="absolute size-5 transition-transform duration-300 group-open:rotate-45"
                                        />
                                    </span>
                                </summary>
                                <div class="pb-6 text-gray-600 leading-relaxed overflow-hidden animate-accordion-down">
                                    {faq.answer}
                                </div>
                            </details>
                        ))
                    }
                </div>
            </div>
        </div>
    </Container>
</section>

<style>
    /* Remove default details marker */
    details > summary {
        list-style: none;
    }
    details > summary::-webkit-details-marker {
        display: none;
    }

    /* Optional: Simple animation for content appearance */
    details[open] summary ~ div {
        animation: fadeIn 0.3s ease-in-out;
    }

    @keyframes fadeIn {
        0% {
            opacity: 0;
            transform: translateY(-5px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
