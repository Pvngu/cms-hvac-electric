---
import { Icon } from "astro-icon/components";
import Image from "astro/components/Image.astro";
import logo from "@assets/logo.svg";
import { SITE_DATA, NAV_LINKS } from "@data/site";

const currentYear = new Date().getFullYear();

// Additional links for the footer not in the main nav
const LEGAL_LINKS = [
  { label: "Privacy Policy", href: "/privacy" },
  { label: "Terms & Conditions", href: "/terms" },
];
---

<footer
  class="relative bg-navy-deep text-white overflow-hidden pt-24 pb-12 font-inter"
>
  <!-- Background Glow Effects -->
  <div
    class="absolute top-0 right-0 w-[600px] h-[600px] bg-blue-royal/20 rounded-full blur-[120px] -translate-y-1/2 translate-x-1/4 pointer-events-none"
  >
  </div>
  <div
    class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-blue-sky/10 rounded-full blur-[100px] translate-y-1/3 -translate-x-1/4 pointer-events-none"
  >
  </div>

  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 mb-24">
      <!-- Brand Section -->
      <div class="flex flex-col items-start">
        <a href="/" class="flex items-center gap-3 mb-8 group">
          <Image
            src={logo}
            alt={`${SITE_DATA.name} Logo`}
            class="w-12 h-12 text-white fill-white"
          />
          <div class="flex flex-col">
            <span
              class="font-oswald text-3xl uppercase tracking-wider leading-none"
            >
              {SITE_DATA.name}
            </span>
            <span
              class="text-[0.65rem] tracking-[0.2em] text-blue-sky uppercase opacity-80 pl-0.5"
            >
              HVAC & Electric Solutions
            </span>
          </div>
        </a>

        <p class="text-gray-light max-w-md text-lg leading-relaxed mb-10">
          {SITE_DATA.description} We are committed to providing top-tier services
          that empower homes and businesses reliability and efficiency.
        </p>

        <!-- Social Icons -->
        <div class="flex gap-4">
          <!-- <a
            href="#"
            class="w-12 h-12 rounded-full border border-white/20 flex items-center justify-center hover:bg-white hover:text-navy-deep hover:border-white transition-all duration-300 group"
            aria-label="LinkedIn"
          >
            <Icon name="linkedin" class="w-5 h-5" />
          </a> -->
        </div>
      </div>

      <!-- Navigation Links -->
      <div class="flex flex-col items-start lg:items-end justify-center">
        <nav class="flex flex-col space-y-4 lg:space-y-6">
          {
            NAV_LINKS.map((link) => (
              <a
                href={link.href}
                class="font-oswald text-3xl lg:text-4xl hover:text-blue-sky transition-colors flex items-center gap-3 lg:flex-row-reverse group"
              >
                <span class="w-2 h-2 rounded-full bg-blue-sky opacity-0 group-hover:opacity-100 transition-opacity duration-300 translate-y-[2px]" />
                {link.label}
              </a>
            ))
          }
        </nav>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div
      class="border-t border-white/10 pt-8 flex flex-col md:flex-row justify-between items-center gap-4 text-gray-dim text-sm"
    >
      <p>
        Copyright {currentYear} &copy; {SITE_DATA.name}, All Rights Reserved
      </p>

      <div class="flex gap-8">
        {
          LEGAL_LINKS.map((link) => (
            <a
              href={link.href}
              class="hover:text-white transition-colors relative after:content-[''] after:absolute after:left-0 after:bottom-[-2px] after:w-0 after:h-[1px] after:bg-white after:transition-all hover:after:w-full"
            >
              {link.label}
            </a>
          ))
        }
      </div>
    </div>
  </div>
</footer>
