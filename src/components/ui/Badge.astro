---
import { Icon } from "astro-icon/components";

interface Props {
    icon?: string;
    class?: string;
}

const { icon, class: className } = Astro.props;
---

<div
    class:list={[
        "inline-flex items-center gap-2 px-3 py-1 rounded-full border border-gray-200 bg-white",
        className,
    ]}
>
    {icon && <Icon name={icon} class="size-4 text-gray-600" />}
    <span class="text-sm font-medium text-gray-600">
        <slot />
    </span>
</div>
