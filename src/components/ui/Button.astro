---
import { cva, type VariantProps } from "class-variance-authority";
import { twMerge } from "tailwind-merge";
import { getLocalizedPath } from "@lib/i18n";

const buttonStyles = cva(
  "inline-flex items-center justify-center whitespace-nowrap text-sm transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 font-inter cursor-pointer",
  {
    variants: {
      variant: {
        primary:
          "bg-primary hover:bg-accent text-primary-foreground rounded-full px-8 text-base shadow-lg shadow-primary/20",
        link: "text-white hover:text-blue-200 underline underline-offset-4 font-medium transition-colors text-base",
        nav: "text-white/90 text-sm hover:text-white no-underline hover:bg-white/10 rounded-sm transition-all duration-300",
        outline:
          "border border-border/60 bg-transparent hover:bg-border/5 text-black rounded-sm",
      },
      size: {
        sm: "h-9 px-3",
        md: "h-10 p-6",
        lg: "h-14 px-12 text-sm md:text-base",
      },
    },
    defaultVariants: {
      variant: "primary",
      size: "md",
    },
  }
);

export interface Props extends VariantProps<typeof buttonStyles> {
  href?: string;
  class?: string;
  [key: string]: any;
}

const { href, variant, size, class: className, ...rest } = Astro.props;

const Tag = href ? "a" : "button";

const classes = twMerge(buttonStyles({ variant, size, className }));
const { currentLocale } = Astro;
const finalHref = href ? getLocalizedPath(href, currentLocale) : undefined;
---

<Tag class:list={classes} href={finalHref} {...rest}>
  <slot />
</Tag>
