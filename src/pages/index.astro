---
import Layout from "@layouts/Layout.astro";
import Hero from "@components/sections/Hero.astro";
import About from "@components/sections/About.astro";
import FAQ from "@components/sections/FAQ.astro";
import Projects from "@components/sections/Projects.astro";
import CTA from "@components/sections/CTA.astro";
import Services from "@components/sections/Services.astro";
import WhyChooseUs from "@components/sections/WhyChooseUs.astro";
import { useNestedTranslations } from "@lib/i18n";
const { currentLocale } = Astro;
const t = useNestedTranslations(currentLocale);
---

<Layout title={t("meta.home.title")} description={t("meta.home.description")}>
  <Hero />
  <About />
  <Services />
  <WhyChooseUs />
  <Projects />
  <CTA />
  <FAQ />
</Layout>
